<script type="text/javascript" src="js/PageNav.js"></script>
<script>
    $.get("/doadd?page=1", function (data) {
        new PageNav({
            boxid: "pagenavbox",
            page: 1,
            pageAmount: data.pageAmount,
            change: function (pagenumber) {
                gotopage(pagenumber);
            }
        });
        gotopage(1);
    });
    function gotopage(pagenumber) {
        $("#tbody").empty();
        $.get("/doadd?page=" + pagenumber, function (data) {
            $.each(data.results, function (i, n) {
                //创建一个tr标签
                $tr = $("<tr class='shows'></tr>");
                $("<td></td>").html(n.sid).appendTo($tr);
                $("<td></td>").html(n.leixing).appendTo($tr);
                $("<td></td>").html(n.mianji).appendTo($tr);
                $("<td></td>").html(n.chuangshuliang).appendTo($tr);
                $("<td></td>").html(n.zaocan).appendTo($tr);
                $("<td></td>").html(n.wangluo).appendTo($tr);
                $("<td></td>").html(n.dianshi).appendTo($tr);
                $("<td></td>").html(n.jiage).appendTo($tr);
                $("<td></td>").html(n.fangshuliang).appendTo($tr);
                $("<td></td>").html(n.yushuliang).appendTo($tr);
                $("<td></td>").html("<button type='button' data-toggle='modal' data-target='#myModal1' id='update' class='work update btn btn-primary'>修改</button> <button type='button' class='work del btn btn-danger'>删除</button> <button type='button' class='work btn btn-info'>选择</button>").appendTo($tr);
                //上树
                $tr.appendTo($("#tbody"));
            });
        });
    }
    //增加
    $("#btn").click(function () {
        $.post("/doadd", {
            sid: parseInt($("input[name=sid]").val()),
            leixing: $("input[name=leixing]").val(),
            mianji: $("input[name=mianji]").val(),
            chuangshuliang: $("input[name=chuangshuliang]").val(),
            zaocan: $("#zaocan").val(),
            wangluo: $("#wangluo").val(),
            dianshi: $("#dianshi").val(),
            jiage: $("input[name=jiage]").val(),
            fangshuliang: $("input[name=fangshuliang]").val(),
            yushuliang: $("input[name=yushuliang]").val()
        }, function (data) {
            if (data.result == 1) {
                alert("提交成功！");
                window.location.href = '/lei';
                $("input[type=text]").val("");
            } else if (data.result == -1) {
                alert("提交失败,被占用！");
            } else if (data.result == -2) {
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
    //修改
    $("#tbody").delegate(".update", "click", function () {
        var This = $(this).parent().parent().children();
        var sid = $(This).eq(0).html();
        $.get("/rtype/"+sid,function (data) {
            if (data.result==-1){
                alert("查无此人")
            }else{
                $("input[name=sid]").val(data.result.sid);
                $("input[name=leixings]").val(data.result.leixing);
                $("input[name=mianjis]").val(data.result.mianji);
                $("input[name=chuangshuliangs]").val(data.result.chuangshuliang);
                $("#zaocans").val(data.result.zaocan);
                $("#wangluos").val(data.result.wangluo);
                $("#dianshis").val(data.result.dianshi);
                $("input[name=jiages]").val(data.result.jiage);
                $("input[name=fangshuliangs]").val(data.result.fangshuliang);
                $("input[name=yushuliangs]").val(data.result.yushuliang);
            }
        })
    })
    $("#ok").click(function () {
        var  sid = parseInt($("input[name=sid]").val());
        $.post("/rtype/" + sid,{
            sid: parseInt($("input[name=sid]").val()),
            leixings: $("input[name=leixings]").val(),
            mianjis: $("input[name=mianjis]").val(),
            chuangshuliangs: $("input[name=chuangshuliangs]").val(),
            zaocans: $("#zaocans").val(),
            wangluos: $("#wangluos").val(),
            dianshis: $("#dianshis").val(),
            jiages: $("input[name=jiages]").val(),
            fangshuliangs: $("input[name=fangshuliangs]").val(),
            yushuliangs: $("input[name=yushuliangs]").val()
        },function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location = "/lei";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //删除
    $("#tbody").delegate(".del", "click", function () {
        var This = $(this).parents().children();
        var sid = $(This).eq(2).html();
        $.ajax({
            url: "/doadd/" + sid,
            type: "delete",
            success: function (data) {
                if (data.result == 1) {
                    alert("删除成功");
                    This.parents("tr").remove();
                    window.location.href = '/lei'
                } else {
                    alert("服务器错误！");
                }
            }
        });
    })
</script>
