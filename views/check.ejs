<script>
    $(".btn").click(function () {
        var typename=$(".tiaojian").val();
        $.get("/ruzhu",function(data){
            $("#tbody").empty()
            var str="";
            var data=data.result;
            $.each(data, function (i, n) {
                if(n.name==typename){
                    str="<tr class='shows '>" +
                        "<th class='comeday'>"+data[i].comeday+"</th>" +
                        "<th class='goday'>"+data[i].goday+"</th>" +
                        "<th class='name'>"+data[i].name+"</th>" +
                        "<th class='rename'>"+data[i].rename+"</th>" +
                        "<th class='zhengjianhao'>"+data[i].zhengjianhao+"</th>" +
                        "<th class='sex'>"+data[i].sex+"</th>" +
                        "<th class='fanghao'>"+data[i].fanghao+"</th>" +
                        "<th class='leixing'>"+data[i].leixing+"</th>" +
                        "<th class='zhuangtai'>"+data[i].zhuangtai+"</th>" +
                        "<th class='xiaofei'>"+data[i].xiaofei+"</th>" +
                        "</tr>";
                    $("#tbody").append(str);
                }
            })
        })
    })
</script>
